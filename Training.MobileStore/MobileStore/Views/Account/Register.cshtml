@model MobileStore.ViewModels.RegisterViewModel

@{
  ViewData["Title"] = "MobileStore";
}

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
  <div class="validation" asp-validation-summary="ModelOnly"/>
  <div class="form-group">
    <label asp-for="Email">Enter Email</label>
    <input type="text" asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email"/>
  </div>
  <div class="form-group">
    <label asp-for="Password">Enter Password</label>
    <input asp-for="Password" class="form-control"/>
    <span asp-validation-for="Password"/>
  </div>
  <div class="form-group">
    <label asp-for="ConfirmPassword">Повторите пароль</label>
    <input asp-for="ConfirmPassword" class="form-control"/>
    <span asp-validation-for="ConfirmPassword"/>
  </div>
  <div class="form-group">
    <input type="submit" value="Register" class="btn btn-default"/>
  </div>
</form>