@model IEnumerable<User>

<h2>Users</h2>
<a asp-action="CreateUser" class="btn btn-default"> Add new User</a>
<p></p>
<table class="table">
  <tr><th>Email</th><th>Year</th><th></th></tr>
  @foreach (var user in Model)
  {
    <tr>
      <td>@user.Email</td>
      <td>@user.Year</td>
      <td>
        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
          <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
          <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-primary">Change password</a>
          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
      </td>
    </tr>
  }
</table>